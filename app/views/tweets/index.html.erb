<body>
<div class="tweet container">
	<div class="jumbotron col-md-12">
<h1>Tweets#index</h1>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>Name</th>
			<th>Title</th>
			<th>content</th>
			<th>image</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	<% @tweets.each do |tweet| %>
		<tr>
			<td><%= tweet.user.name %></td>
			<td><%= tweet.title %></td>
			<td><%= tweet.content %></td>
			<td><%= attachment_image_tag tweet, :image, :fill,100,100, class: "pull-left profile-thumb", fallback: "taco.jpg",:size => '60x60' %></td>
			<td><%= link_to "Show", tweet_path(tweet.id), class: 'btn btn-primary btn-sm glyphicon glyphicon-eye-open' %></td>
			<td><i class="glyphicon glyphicon-comment"></i>
			<%= link_to tweet.post_comments.count, tweet_path(tweet.id) %></td>
		</tr>
	<% end %>
	</tbody>
</table>
	</div>
</div>
</body>